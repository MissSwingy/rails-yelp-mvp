<div class="container">
<h1>New Restaurant</h1>

<%= form_for(@restaurant) do |r| %>
  <div class="form-group">
    <%= r.label :name %>
    <%= r.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= r.label :address %>
    <%= r.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= r.label :phone_number %>
    <%= r.text_field :phone_number, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= r.label :category %>
    <%= r.text_field :category, class: 'form-control' %>
  </div>

  <%= r.submit class: 'btn btn-primary'  %>
<% end %>
</div>

